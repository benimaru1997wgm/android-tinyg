<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.csgeeks.TinyG"
    android:versionCode="11"
    android:versionName="@string/version" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name" >
        <activity
            android:name=".TinyGActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ShowSettingsActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".MachineActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".MotorActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".AxisActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".JogActivity" />
        <activity android:name=".FileActivity"
            android:windowSoftInputMode="stateHidden" />
        <service android:name=".Support.TinyGNetwork">
            <intent-filter>
                <action android:name="org.csgeeks.TinyG.Support.TinyGNetwork" />
            </intent-filter>
        </service>
    </application>

</manifest>