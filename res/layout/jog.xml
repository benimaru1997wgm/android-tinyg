<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <ToggleButton
        android:id="@+id/jogRate"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:textOff="@string/feed_slow_label"
        android:textOn="@string/feed_fast_label" />

    <Button
        android:id="@+id/xneg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_above="@+id/yneg"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/jogRate"
        android:text="@string/xneg" />

    <Button
        android:id="@+id/xzero"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/xneg"
        android:layout_toRightOf="@+id/xneg"
        android:text="@string/zero_label" />

    <Button
        android:id="@+id/xpos"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/xneg"
        android:layout_toRightOf="@+id/xzero"
        android:text="@string/xpos" />

    <Button
        android:id="@+id/yneg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/xneg"
        android:layout_alignTop="@+id/jogRate"
        android:text="@string/yneg" />

    <Button
        android:id="@+id/yzero"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/yneg"
        android:layout_toRightOf="@+id/yneg"
        android:text="@string/zero_label" />

    <Button
        android:id="@+id/ypos"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/yneg"
        android:layout_toRightOf="@+id/yzero"
        android:text="@string/ypos" />

    <Button
        android:id="@+id/zneg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/yneg"
        android:layout_below="@+id/yneg"
        android:text="@string/zneg" />

    <Button
        android:id="@+id/zzero"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/zneg"
        android:layout_toRightOf="@+id/zneg"
        android:text="@string/zero_label" />

    <Button
        android:id="@+id/zpos"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/zneg"
        android:layout_toRightOf="@+id/zzero"
        android:text="@string/zpos" />

    <Button
        android:id="@+id/g28"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/jogRate"
        android:layout_below="@+id/zneg"
        android:layout_marginTop="40dp"
        android:text="@string/homing_cycle_label" />

    <Button
        android:id="@+id/reset"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/g28"
        android:layout_below="@+id/g28"
        android:text="@string/reset_label" />

    <ToggleButton
        android:id="@+id/spindle"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/g28"
        android:layout_toRightOf="@+id/g28"
        android:textOff="@string/spindle_label"
        android:textOn="@string/spindle_label" />

    <ToggleButton
        android:id="@+id/coolant"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/spindle"
        android:layout_below="@+id/spindle"
        android:textOff="@string/coolant_label"
        android:textOn="@string/coolant_label" />

    <Button
        android:id="@+id/home"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/spindle"
        android:layout_alignTop="@+id/spindle"
        android:text="@string/home" />
    
    <TextView 
        android:id="@+id/rateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset"
        android:layout_alignLeft="@+id/jogRate"
        android:layout_marginTop="30dp"
        android:text="@string/jogval" />
    
 	<RadioGroup
 	    android:id="@+id/rateGroup"
 	    android:layout_width="300dp"
 	    android:layout_height="wrap_content"
 	    android:layout_toRightOf="@+id/rateLabel"
 	    android:layout_alignTop="@+id/rateLabel"
 	    android:layout_marginLeft="20dp"
 	    android:orientation="horizontal">
 		
 	    <RadioButton
 	        android:id="@+id/step_001"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:text="@string/step_001" />

  	    <RadioButton
 	        android:id="@+id/step_01"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:text="@string/step_01" />
 	    
  	    <RadioButton
 	        android:id="@+id/step_1"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:text="@string/step_1" />

  	    <RadioButton
 	        android:id="@+id/step_1_0"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:text="@string/step_1_0" />
  	    
  	    <RadioButton
 	        android:id="@+id/step_10"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:text="@string/step_10" />
  	      	    	    	    
 	</RadioGroup>
 	    

    <TextView
        android:id="@+id/gcode_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/jogRate"
        android:layout_below="@+id/rateGroup"
        android:layout_marginTop="30dp"
        android:text="@string/gcode_label" />

    <EditText
        android:id="@+id/gcode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gcode_label"
        android:layout_below="@+id/reset"
        android:layout_toRightOf="@+id/gcode_label"
        android:inputType="text" />

        <Button
        android:id="@+id/go"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/gcode"
        android:layout_alignBaseline="@+id/gcode"
        android:text="@string/go_label" />
    
</RelativeLayout>